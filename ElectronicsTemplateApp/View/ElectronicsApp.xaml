<Window x:Class="ElectronicsTemplateApp.View.Electronics_Template_Application"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ElectronicsTemplateApp.View"
        mc:Ignorable="d"
        Title="Electronics_Template_Application" Height="650" Width="500"
        WindowStyle="None"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        Background="Transparent"
        AllowsTransparency="True"
        MouseDown="Window_MouseDown"
        >

    <Border CornerRadius="20"
            Background="#E6E6E6"
            BorderBrush="#E6E6E6"
            BorderThickness="0">

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="30"/>
            </Grid.RowDefinitions>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="25"/>
                    <ColumnDefinition Width="25"/>
                    <ColumnDefinition Width="20"/>
                </Grid.ColumnDefinitions>

                <TextBlock Text="Electronics Template Application"
                           Foreground="Black"
                           FontSize="10"
                           FontFamily="Montserrat"
                           Grid.Column="0"
                           VerticalAlignment="Center"
                           Margin="10,0,0,0"
                           FontWeight="Bold"/>

                <!--Boton de minimizar-->
                <Button x:Name="btnMinimize"
                        Background="#E6E6E6"
                        BorderThickness="0"
                        Content="-"
                        Foreground="Black"
                        FontSize="22"
                        FontFamily="Montserrat"
                        Cursor="Hand"
                        Grid.Column="1"
                        Click="btnMinimize_Click"
                        FontWeight="Bold">
                </Button>

                <!--Boton de cerrar-->
                <Button x:Name="btnClose"                        
                        Background="#E6E6E6"
                        BorderThickness="0"
                        Content="X"
                        Foreground="Black"
                        FontSize="15"
                        FontFamily="Montserrat"
                        Cursor="Hand"
                        Grid.Column="2"
                        Click="btnClose_Click"
                        FontWeight="Bold">
                </Button>
            </Grid>
        </Grid>
    </Border>
</Window>
