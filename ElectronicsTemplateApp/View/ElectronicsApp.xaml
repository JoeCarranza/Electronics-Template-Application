<Window x:Class="ElectronicsTemplateApp.View.Electronics_Template_Application"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ElectronicsTemplateApp.View"
        mc:Ignorable="d"
        Title="Electronics_Template_Application" Height="650" Width="500"
        WindowStyle="None"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        Background="Transparent"
        AllowsTransparency="True"
        MouseDown="Window_MouseDown"
        >

    <Border CornerRadius="20"
            Background="#1E1E1E"
            BorderBrush="#1E1E1E"
            BorderThickness="0">

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="30"/>
            </Grid.RowDefinitions>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="25"/>
                    <ColumnDefinition Width="25"/>
                    <ColumnDefinition Width="20"/>
                </Grid.ColumnDefinitions>

                <TextBlock Text="Electronics Template Application"
                           Foreground="White"
                           FontSize="11"
                           FontFamily="Montserrat"
                           Grid.Column="0"
                           VerticalAlignment="Center"
                           Margin="10,0,0,0"
                           FontWeight="Bold"/>

                <!--Boton de minimizar-->
                <Button x:Name="btnMinimize"
                        BorderThickness="0"
                        Content="-" 
                        FontSize="21"
                        FontFamily="Montserrat"
                        Cursor="Hand"
                        Grid.Column="1"
                        Click="btnMinimize_Click"
                        FontWeight="Bold">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="#757575"/>
                            <Setter Property="Foreground" Value="#E6E6E6"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#31A8FF"/>
                                    <Setter Property="Foreground" Value="black"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>

                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Width="20" Height="25" 
                                   CornerRadius="9"
                                   Background="{TemplateBinding Background}">
                                <ContentPresenter VerticalAlignment="Center"
                                                  HorizontalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>

                </Button>

                <!--Boton de cerrar-->
                <Button x:Name="btnClose"                        
                        BorderThickness="0"
                        Content="X"  
                        FontSize="15"
                        FontFamily="Montserrat"
                        Cursor="Hand"
                        Grid.Column="2"
                        Click="btnClose_Click"
                        FontWeight="Bold">

                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="#757575"/>
                            <Setter Property="Foreground" Value="#E6E6E6"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#31A8FF"/>
                                    <Setter Property="Foreground" Value="black"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>

                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Width="20" Height="25" 
                CornerRadius="9"
                Background="{TemplateBinding Background}">
                                <ContentPresenter VerticalAlignment="Center"
                               HorizontalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </Grid>

            <Border CornerRadius="20"
                    Background="#757575"
                    BorderBrush="#757575"
                    BorderThickness="0"
                    Margin="5,45,5,-75"/>
            <StackPanel Orientation="Horizontal"
                        Background="Transparent"
                        Height="50" 
                        Margin="10,49,10,-59">

                <Button Content="USA"
                        Margin="15,0,5,0"
                        FontWeight="Bold"
                        FontSize="12"
                        FontFamily="Montserrat">

                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="White"/>
                            <Setter Property="Foreground" Value="Black"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#31A8FF"/>
                                    <Setter Property="Foreground" Value="White"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>

                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Width="50" Height="25" 
                                    CornerRadius="9"
                                    Background="{TemplateBinding Background}">
                                <ContentPresenter VerticalAlignment="Center"
                                                  HorizontalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>

                </Button>
                <Button Content="LAC"
                        Margin="15,0,5,0"
                        FontWeight="Bold"
                        FontSize="12"
                        FontFamily="Montserrat">

                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="White"/>
                            <Setter Property="Foreground" Value="Black"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#31A8FF"/>
                                    <Setter Property="Foreground" Value="White"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>

                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Width="50" Height="25" 
                                    CornerRadius="9"
                                    Background="{TemplateBinding Background}">
                                <ContentPresenter VerticalAlignment="Center"
                                                  HorizontalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>

                </Button>
                <Button Content="DCC LEVELS"
                        Margin="15,0,5,0"
                        FontWeight="Bold"
                        FontSize="12"
                        FontFamily="Montserrat">

                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="White"/>
                            <Setter Property="Foreground" Value="Black"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#31A8FF"/>
                                    <Setter Property="Foreground" Value="White"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>

                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Width="75" Height="25" 
                                    CornerRadius="9"
                                    Background="{TemplateBinding Background}">
                                <ContentPresenter VerticalAlignment="Center"
                                                  HorizontalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>

                </Button>
                <Button Content="FO ERRORS"
                        Margin="15,0,5,0" 
                        FontWeight="Bold"
                        FontSize="12"
                        FontFamily="Montserrat">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="White"/>
                            <Setter Property="Foreground" Value="Black"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#31A8FF"/>
                                    <Setter Property="Foreground" Value="White"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>

                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Width="75" Height="25" 
                                    CornerRadius="9"
                                    Background="{TemplateBinding Background}">
                                <ContentPresenter VerticalAlignment="Center"
                                                  HorizontalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>

                </Button>

                <ToggleButton x:Name="OthersToggleButton"
                              FontFamily="Montserrat"
                              HorizontalContentAlignment="Center"
                              VerticalContentAlignment="Center"
                              ClickMode="Press"
                              Content="Others"
                              FontWeight="Bold"
                              FontSize="13"
                              Margin="15,0,5,0" Height="41">


                    <ToggleButton.Style>
                        <Style TargetType="ToggleButton">
                            <Setter Property="Background" Value="White"/>
                            <Setter Property="Foreground" Value="Black"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#31A8FF"/>
                                    <Setter Property="Foreground" Value="White"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </ToggleButton.Style>

                    <ToggleButton.Template>

                        <ControlTemplate TargetType="ToggleButton">
                            <Border Width="50"
                                    Height="22"
                                    CornerRadius="9"
                                    Background="{TemplateBinding Background}">

                                <StackPanel>
                                    <ContentPresenter Content="{TemplateBinding Content}"
                                                      HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                                      VerticalAlignment="{TemplateBinding VerticalContentAlignment}">
                                    </ContentPresenter>

                                    <Popup IsOpen="{Binding IsChecked,RelativeSource={RelativeSource TemplatedParent},Mode=TwoWay}"
                                           Placement="Bottom">
                                        <Border Background="White" BorderBrush="White" BorderThickness="0">
                                            <StackPanel>
                                                <Button Content="BUPA Chile"></Button>
                                                <Button Content="FMEP"></Button>
                                                <Button Content="FME Case"></Button>
                                            </StackPanel>
                                        </Border>
                                    </Popup>
                                </StackPanel>
                            </Border>
                        </ControlTemplate>
                    </ToggleButton.Template>

                </ToggleButton>

                <Button Content="READY"
                        Margin="15,0,5,0"
                        FontWeight="Bold"
                        FontSize="12"
                        FontFamily="Montserrat">

                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="White"/>
                            <Setter Property="Foreground" Value="Black"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#31A8FF"/>
                                    <Setter Property="Foreground" Value="White"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>

                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Width="50" Height="25" 
                                    CornerRadius="9"
                                    Background="{TemplateBinding Background}">
                                <ContentPresenter VerticalAlignment="Center"
                                                  HorizontalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </StackPanel>

            <Border CornerRadius="20"
                    Background="#757575"
                    BorderBrush="#757575"
                    BorderThickness="0"
                    Margin="31,150,32,-169"/>
            <StackPanel Orientation="Horizontal"
                        Background="Transparent" 
                         Margin="32,150,32,-169">

                <TextBlock Text="TL Consulted:"
                           Foreground="White"
                           FontSize="11"
                           FontFamily="Montserrat"
                           Grid.Column="0"
                           VerticalAlignment="Center"
                           Margin="10,0,5,0"
                           FontWeight="Bold">
                </TextBlock>

                <Border Width="250"
                        Height="35"
                        Background="White"
                        CornerRadius="9"
                        Margin="5,0,0,0">

                    <TextBox x:Name="txtBoxTlConsulted"
                         FontSize="11"
                         FontFamily="Montserrat"
                         FontWeight="Bold"
                         BorderThickness="0"
                         Padding="11"
                         Width="250"
                         Height="35"
                         Background="Transparent" HorizontalAlignment="Center" TextAlignment="Center"/>


                </Border>

                <Button Content="Copy"
                        Margin="20,0,5,0"
                        FontWeight="Bold"
                        FontSize="12"
                        FontFamily="Montserrat">

                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="White"/>
                            <Setter Property="Foreground" Value="Black"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#31A8FF"/>
                                    <Setter Property="Foreground" Value="White"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>

                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Width="60" Height="30" 
                    CornerRadius="9"
                    Background="{TemplateBinding Background}">
                                <ContentPresenter VerticalAlignment="Center"
                                  HorizontalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>

                </Button>
            </StackPanel>

            <Border CornerRadius="20"
                    Background="#757575"
                    BorderBrush="#757575"
                    BorderThickness="0"
                    Margin="31,215,32,-234">
                <StackPanel Orientation="Horizontal"
                            Background="Transparent">
                    <TextBlock Text="WO Title:"
                               Foreground="White"
                               FontSize="11"
                               FontFamily="Montserrat"
                               Grid.Column="0"
                               VerticalAlignment="Center"
                               Margin="10,0,28,0"
                               FontWeight="Bold">
                    </TextBlock>

                    <Border Width="250"
                            Height="35"
                            Background="White"
                            CornerRadius="9"
                            Margin="5,0,0,0">

                        <TextBox x:Name="txtBoxWOTitle"
                                 FontSize="11"
                                 FontFamily="Montserrat"
                                 FontWeight="Bold"
                                 BorderThickness="0"
                                 Padding="11"
                                 Width="250"
                                 Height="35"
                                 Background="Transparent" HorizontalAlignment="Center" TextAlignment="Center"/>

                    </Border>
                    <Button Content="Copy"
                            Margin="21,0,5,0"
                            FontWeight="Bold"
                            FontSize="12"
                            FontFamily="Montserrat">

                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="White"/>
                                <Setter Property="Foreground" Value="Black"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#31A8FF"/>
                                        <Setter Property="Foreground" Value="White"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>

                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Width="60" Height="30" 
                                        CornerRadius="9"
                                        Background="{TemplateBinding Background}">
                                    <ContentPresenter VerticalAlignment="Center"
                                                      HorizontalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>

                    </Button>


                </StackPanel>
            </Border>

        </Grid>
    </Border>
</Window>
 